<!-----------------APPPROVED OR NOT FOR ROLE_USER----------------->

<div class="container"
	ng-if="AllForums.length != 0 && $root.LogonRole == 'ROLE_USER'">
			<p ng-show="(AllForums | filter: otheremail).length == 0" class="alert alert-danger">Nothing here!</p>
	
	<div class="row">
		<div class="col col-md-4" ng-if="(otheremail || x.ownerId == $root.LogonEmail)"
		ng-repeat="x in AllForums | filter: otheremail">
			<div class="blog-grids">
				<div class="grid">
					<div class="entry-media">
						<img
							src="http://www.csshint.com/wp-content/uploads/2017/09/beautiful-buttons-effect.jpg"
							alt="">
					</div>
					<div class="entry-body">
							<h1 class="alert alert-success"
								ng-if="x.approved && !$routeParams.param && (x.ownerId == $root.LogonEmail || $root.LogonRole == 'ROLE_ADMIN')">Approved</h1>
							<h1 class="alert alert-warning"
								ng-if="!x.approved && !$routeParams.param && (x.ownerId == $root.LogonEmail || $root.LogonRole == 'ROLE_ADMIN')">Pending</h1>
						
						
						<span class="cat">{{x.title}}</span><hr><span class="cat">{{x.ownerId}}</span>
						<h3>
							<a href="#">{{x.category}}</a>
						</h3>
						<p>{{x.description}}</p>
						<div class="read-more-date">
							<a href="#">Read More..</a>
						</div>

						<div class="date" style="color: #9e9c9c;">{{x.date}}</div>
						<br>
						<button class="btn btn-danger"
							ng-if="x.ownerId == $root.LogonEmail"
							ng-click="DeleteForum(x.id)">Delete</button>
						<button class="btn btn-primary"
							ng-if="x.ownerId == $root.LogonEmail" ng-click="EditForum(x.id)"
							data-toggle="modal" data-target="#editForumModal">Edit</button>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>




<!-----------------APPPROVED OR NOT FOR ROLE_ADMIN----------------->

<div class="container"
	ng-if="AllForums.length != 0 && $root.LogonRole == 'ROLE_ADMIN'">
	<div class="row">
		<div class="col col-md-4" ng-repeat="x in AllForums | filter: (otheremail || '') && otheremail">
			<div class="blog-grids">
				<div class="grid">
					<div class="entry-media">
						<img
							src="http://www.csshint.com/wp-content/uploads/2017/09/beautiful-buttons-effect.jpg"
							alt="">
					</div>
					<div class="entry-body">
						<h1 class="alert alert-success"
								ng-if="x.approved && !$routeParams.param">Approved</h1>
							<h1 class="alert alert-warning"
								ng-if="!x.approved && !$routeParams.param">Pending</h1>
								
						<span class="cat">{{x.title}}</span>
						<h3>
							<a href="#">{{x.category}}</a>
						</h3>
						<p>{{x.description}}</p>
						<div class="read-more-date">
							<a href="#">Read More..</a>
						</div>

						<div class="date" style="color: #9e9c9c;">{{x.date}}</div>
						<br>
						<div ng-if="!x.approved">
								<button class="btn btn-danger" ng-click="RejectForum(x.id)">Reject</button>
								<button class="btn btn-success" ng-click="ApproveForum(x.id)">Approve</button>
							</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

